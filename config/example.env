JIRA_BASE_URL=https://tailored-prod.atlassian.net
JIRA_EMAIL=you@example.com
JIRA_API_TOKEN=your_token

FIGMA_TOKEN=your_figma_pat

# Optional: included in Jira comment for a consistent “handoff location”
CONFLUENCE_HANDOFF_PAGE_URL=https://tailored-prod.atlassian.net/wiki/spaces/TR/pages/123456789/Design+Handoff

# Optional: map Figma file keys to brands (for multi-brand diffs)
# Example: tmw=w2YK...,jab=abcd...,msp=efgh...
FIGMA_BRAND_FILE_KEYS=

# Optional: notifications (only sent when warnings/drift is detected)
SLACK_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=

# Optional: set false to avoid modifying Jira tickets (no comments, no checklist insert)
WRITE_BACK=true

# Optional: Jira label automation
JIRA_LABEL_AUTOMATION=true

# Optional: Evidence attachments to Jira (uploads markdown + svg snapshots)
JIRA_ATTACH_EVIDENCE=true

# Optional: default JQL if none passed on CLI
DEFAULT_JQL=project = RFW order by updated DESC


